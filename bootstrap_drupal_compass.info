name = subBootstrap, based 2.x branch for bootstrap_drupal_compass
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap

; Regions
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'

; Stylesheets
stylesheets[all][] = compass-project/stylesheets/styles.css

;**********************************
; METHOD 1: Bootstrap Source Files
;**********************************
; 
; ; Scripts
scripts[] = 'compass-project/javascripts/bootstrap-affix.js'
scripts[] = 'compass-project/javascripts/bootstrap-alert.js'
scripts[] = 'compass-project/javascripts/bootstrap-button.js'
scripts[] = 'compass-project/javascripts/bootstrap-carousel.js'
scripts[] = 'compass-project/javascripts/bootstrap-collapse.js'
scripts[] = 'compass-project/javascripts/bootstrap-dropdown.js'
scripts[] = 'compass-project/javascripts/bootstrap-modal.js'
scripts[] = 'compass-project/javascripts/bootstrap-tooltip.js'
scripts[] = 'compass-project/javascripts/bootstrap-popover.js'
scripts[] = 'compass-project/javascripts/bootstrap-scrollspy.js'
scripts[] = 'compass-project/javascripts/bootstrap-transition.js'
scripts[] = 'compass-project/javascripts/bootstrap-typeahead.js'
; 
; ; Settings inherited by base theme, uncomment to override.
; ;settings[toggle_name] = 0
; ;settings[toggle_search] = 1
; ; Disable the CDN as we are using our own source files.
settings[cdn_bootstrap] = 0


;*************************
; METHOD 2: Bootstrap CDN
